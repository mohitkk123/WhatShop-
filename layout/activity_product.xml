<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="WhatShop!"
        android:background="@drawable/relative_layout_back"
        android:layout_marginTop="10dp"
        android:shadowColor="#727171"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:elevation="2dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textFontWeight="700"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="22sp"

        />
    <ImageView
        android:id="@+id/productbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/prod_rel1"
                android:layout_width="match_parent"
                android:background="@drawable/relative_layout_back"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="300dp"

                android:layout_height="300dp">
                <TextView
                    android:id="@+id/prodact_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_bold"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Product name"
                    android:textAlignment="center"
                    android:textColor="#000"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/prodact_title"
                    android:layout_marginBottom="132dp">
                <LinearLayout
                    android:id="@+id/prodact_linear1"

                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/helvetica_bold"
                        android:text="description:"
                        android:textAlignment="center"
                        android:layout_weight="0.5"
                        android:textColor="#000"
                        android:textSize="16sp"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/prodact_des"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/helvetica_med"
                        android:text="description"
                        android:layout_weight="0.5"
                        android:textColor="#000"

                        android:textSize="16sp"

                        android:layout_height="wrap_content"/>




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/prodact_linear2"
                    android:layout_below="@id/prodact_linear1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/helvetica_bold"
                        android:text="Offer price:"
                        android:textAlignment="center"
                        android:layout_weight="0.5"
                        android:textColor="#000"
                        android:textSize="16sp"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/prodact_price"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/helvetica_med"
                        android:text="Offer price"
                        android:layout_weight="0.5"
                        android:textColor="#000"

                        android:textSize="16sp"

                        android:layout_height="wrap_content"/>




                </LinearLayout>
                <LinearLayout
                    android:id="@+id/prodact_linear3"
                    android:layout_below="@id/prodact_linear2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/helvetica_bold"
                        android:text="Product Category:"
                        android:layout_weight="0.5"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textAlignment="center"

                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/prodact_category"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/helvetica_med"
                        android:text="category"
                        android:layout_weight="0.5"
                        android:textColor="#000"

                        android:textSize="16sp"

                        android:layout_height="wrap_content"/>




                </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:id="@+id/prodact_chat_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chat with owner"
                        android:textColor="#fff"
                        android:fontFamily="@font/helvetica_med"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="10dp"


                        android:layout_alignParentBottom="true"
                        android:background="@drawable/button_gradient"/>

                    <Button
                        android:id="@+id/prodact_add_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/prodact_chat_b"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="10dp"
                        android:background="@drawable/button_gradient"

                        android:fontFamily="@font/helvetica_med"
                        android:text="Add to Cart"
                        android:textColor="#fff" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>