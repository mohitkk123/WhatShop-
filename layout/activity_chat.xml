<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.ChatActivity">
    <TextView
        android:id="@+id/chatact_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pacifico"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="WhatShop!"
        android:background="#fff"

        android:shadowColor="#727171"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:elevation="5dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textFontWeight="700"
        android:textSize="22sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/chatact_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatact_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:indeterminateTint="#90f83600"
        android:progressTint="@color/apporange_light"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatact_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatact_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"

        android:padding="10dp" />

</RelativeLayout>